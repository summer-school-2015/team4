<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1">

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:layout_weight="0.32"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="options"
            android:id="@+id/textView3" android:layout_gravity="center_horizontal" android:layout_weight="0.08"/>
    <Switch
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:text="sound"
            android:id="@+id/switch2" android:layout_gravity="center_horizontal" android:layout_weight="0.09"
            android:checked="false"/>
    <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="back"
            android:id="@+id/button4" android:layout_gravity="center_horizontal" android:layout_weight="0.11"/>
</LinearLayout>