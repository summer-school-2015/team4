            <Button
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="body"
                    android:id="@+id/button6" android:layout_gravity="center_horizontal"
                    android:onClick="fight"/>
            <Button
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="legs"
                    android:id="@+id/button7" android:layout_gravity="center_horizontal"
                    android:onClick="fight"/>
            <Button
                    android:layout_width="92dp"
                    android:layout_height="35dp"
                    android:text="menu"
                    android:id="@+id/button8" android:layout_gravity="center_horizontal"
                    android:onClick="Backtomain"/>
        </LinearLayout>
        <ImageView
                android:layout_width="200dp"
                android:layout_height="197dp"
                android:id="@+id/imageView3" android:layout_weight="0.83" android:background="@drawable/b1"/>
